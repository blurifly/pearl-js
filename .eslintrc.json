{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["**/*.jsx"],
    "rules": {
      "class-methods-use-this": "error",
      "indent": ["error", 2],
      "no-proto": "error"
    }
}
